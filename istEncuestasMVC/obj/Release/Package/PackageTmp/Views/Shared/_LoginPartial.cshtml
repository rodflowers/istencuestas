@using istEncuestasMVC.Models;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "MiCuenta", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @*@Html.AntiForgeryToken()*@

        <ul class="nav navbar-nav navbar-right">           
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log In", "Login", "MiCuenta", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

