
@{
    ViewBag.Title = "Encuestas";
    TempData["ListSubFamilia"] = null;
}

@using istEncuestasMVC.Models;

@model IEnumerable<istEncuestasMVC.Models.Encuesta>


<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Seleccione Encuestas</h3>
    </div>
    
    <br />

    <div class="list-group">
        @foreach (var item in Model)
        {
            <a class="list-group-item">
                <h5 class="list-group-item-heading" data-encuestaid="@item.ID_ENCUESTA">@Html.DisplayFor(modelItem => item.NOMBRE_ENCUESTA)</h5>                              
            </a>
        }
        
    </div>

    <br />
</div>



@section Scripts {
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @Scripts.Render("~/bundles/jqueryval")

    <script type='text/javascript'>
        $(document).ready(function () {           
            $('.list-group-item-heading').click(function () {
                var eid = $(this).data('encuestaid');
                var url = '@Url.Action("SubFamilia", "Encuesta")';
                var cclick = 0
                $.post(url, { encuestaid: eid, finalizada: "N", click: cclick }, function (response) {
                    
                    window.location = response.url;
                    });

            });

          

              
    });       
       
    </script>

}